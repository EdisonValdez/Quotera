{% extends '::base.html.twig' %}

{% block body -%}
    <h1>userInfo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Companyname</th>
                <th>Companydescription</th>
                <th>Products</th>
                <th>Category</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Cp</th>
                <th>Country</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('userinfo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.companyName }}</td>
                <td>{{ entity.companyDescription }}</td>
                <td>{{ entity.products }}</td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.cp }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.city }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('userinfo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('userinfo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('userinfo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
